    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "nodejs",
            "skipFiles": [
                "<node_internals>/**"
            ],
            // "program": "${file}",
            "console": "integratedTerminal",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/nodemon",
            "runtimeArgs": [
                "--ext",
                "js",
                "--exec",
                "C:/ProgramData/nvm/v16.6.0/node64.exe ${file}"
            ],
            "restart": true
        }
    ]
}